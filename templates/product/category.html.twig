{% extends 'base.html.twig' %}

{% block title %}Les oeuvres
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h1>Les oeuvres</h1>
	</div>

	<div class="uk-flex">
		{% for product in products %}
			<div class="uk-card">
				<div class="border border-dark rounded p-2 clearfix">
					<h2>
						{{ product.title }}
						-
						{{ product.price }}
						â‚¬
					</h2>
					<img class="vignette-product"  src="{{ vich_uploader_asset(product.image, 'image') }}" alt="Image de {{ product.title }}">
					<hr>
					{% if product.enabled %}
						<p>
							Vendu
						</p>
					{% endif %}

					<a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success float-right">
						<i class="fas fa-shopping-cart mr-1"></i>
						Ajouter
					</a>
				</div>

			</div>
		{% endfor %}
	</div>
{% endblock %}
