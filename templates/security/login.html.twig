{% extends 'base.html.twig' %}

{% block title %}Connection
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Tu es connecté
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}
		<center>
			<h1 class="connection">Se connecter</h1>

			<div class="uk-margin">
				<div class="uk-inline">
					<span class="uk-form-icon" uk-icon="icon: mail"></span>
					<input type="email" value="{{last_username}}" name="email" id="inputEmail" class="uk-input" required autofocus>
				</div>
			</div>

			<div class="uk-margin">
				<div class="uk-inline">
					<span class="uk-form-icon" uk-icon="icon: lock"></span>
					<input class="uk-input" type="password" name="password" id="inputPassword" required>
				</div>
			</div>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			{#
											        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
											        See https://symfony.com/doc/current/security/remember_me.html
											
											        <div class="checkbox mb-3">
											            <label>
											                <input type="checkbox" name="_remember_me"> Remember me
											            </label>
											        </div>
											    #}

			<button class="uk-button uk-button-secondary uk-button-small" type="submit">
				Se connecter
			</button>
			<br>
			<td>
				Pas encore de compte ?<a href="{{ path('app_register') }}">
					Inscrivez-vous</a>
			</td>
		</form>
	</center>
		<img id="banniere2" src="{{ asset('uploads/images/AssetTemplate/automne.png') }}"/>
{% endblock %}
